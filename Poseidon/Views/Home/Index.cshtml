@model Poseidon.Models.User

@{
    ViewBag.Title = "Bienvenido";
}
@*<h1>@ViewBag.Title.</h1>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.user_login, "Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.user_login, new { @class = "form-control", style = "width:160px" })
                @Html.ValidationMessageFor(model => model.user_login, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.user_pass, "Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.user_pass, new { @class = "form-control", style="width:160px" } )
                @Html.ValidationMessageFor(model => model.user_pass, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <input type="submit" value="Ingresar" />
        </div>
    </div>
}
        
